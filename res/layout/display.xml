<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#198CFF"
    android:padding="20dp"
    android:orientation="vertical" >
    
    <LinearLayout
        android:weightSum="3"
        android:layout_marginBottom="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btnIncrease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:background="#ffffff"
            android:text="@string/btnIncrease"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1" />
        
        <Button
            android:id="@+id/btnShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="#ffffff"
            android:text="@string/btnShare" />

        <Button
            android:id="@+id/btnDecrease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:background="#ffffff"
            android:text="@string/btnDecrease"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvDisplay"
        android:padding="10dp"
        android:textSize="14sp"
        android:background="#ffffff"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    
    <LinearLayout
        android:weightSum="2"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

    <Button
        android:id="@+id/btnCopy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:background="#ffffff"
        android:padding="5dp"
        android:layout_weight="1"
        android:layout_marginRight="2dp"
        android:text="@string/btnCopy" />
    
    <Button
            android:id="@+id/btnFontColor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:textSize="16sp"
            android:background="#ffffff"
            android:text="@string/btnFontColor"
            android:padding="5dp"
            android:layout_weight="1" />
    
    </LinearLayout>

</LinearLayout>