<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#198CFF"
    tools:context="net.csarchive.cprogramming.MainMenu" >

<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="40dp" >
    
    <Button
        android:id="@+id/btnProgramsList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#D1E8FF"
        android:textSize="20sp"
        android:text="@string/btnProgramsList" />

    <Button
        android:id="@+id/btnViewAll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnProgramsList"
        android:layout_marginTop="16dp"
        android:background="#D1E8FF"
        android:textSize="20sp"
        android:text="@string/btnViewAll" />
    
    <Button
        android:id="@+id/btnSaveAll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnViewAll"
        android:layout_marginTop="16dp"
        android:background="#D1E8FF"
        android:textSize="20sp"
        android:text="@string/btnSaveAll" />
    
    <Button
        android:id="@+id/btnSearch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSaveAll"
        android:layout_marginTop="16dp"
        android:background="#D1E8FF"
        android:textSize="20sp"
        android:text="@string/btnSearch" />

    <Button
        android:id="@+id/btnContact"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSearch"
        android:layout_marginTop="16dp"
        android:background="#D1E8FF"
        android:textSize="20sp"
        android:text="@string/btnContact" />
    
    <Button
        android:id="@+id/btnAbout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnContact"
        android:layout_marginTop="16dp"
        android:background="#D1E8FF"
        android:textSize="20sp"
        android:text="@string/btnAbout" />
    
    <Button
        android:id="@+id/btnExit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAbout"
        android:layout_marginTop="16dp"
        android:background="#D1E8FF"
        android:textSize="20sp"
        android:text="@string/btnExit" />

</RelativeLayout>

</ScrollView>